{
  "info": {
    "_postman_id": "booking-api",
    "name": "Bookings API",
    "description": "Postman collection for Bookings API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"package_id\": \"PACKAGE_UUID_HERE\",\n  \"departure_date\": \"2024-12-28\",\n  \"total_participants\": 2,\n  \"passenger_details\": [\n    {\n      \"fullname\": \"Siti Muslimah\",\n      \"id_number\": \"3201234567890123\",\n      \"phone_number\": \"081234567890\",\n      \"email\": \"siti@example.com\"\n    },\n    {\n      \"fullname\": \"Fatimah Zahra\",\n      \"id_number\": \"3201234567890124\",\n      \"phone_number\": \"081234567891\",\n      \"email\": \"fatimah@example.com\"\n    }\n  ],\n  \"special_requests\": \"Butuh kursi roda\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings",
              "host": ["{{base_url}}"],
              "path": ["bookings"]
            }
          }
        },
        {
          "name": "Get Active Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/active?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["bookings", "active"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Booking History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/history?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["bookings", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "completed",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get All Bookings with Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings?page=1&limit=10&status=confirmed&date_from=2024-12-01&date_to=2025-01-15",
              "host": ["{{base_url}}"],
              "path": ["bookings"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "confirmed",
                  "disabled": true
                },
                {
                  "key": "date_from",
                  "value": "2024-12-01",
                  "disabled": true
                },
                {
                  "key": "date_to",
                  "value": "2025-01-15",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "Uzbekistan",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Booking Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/BOOKING_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["bookings", "BOOKING_ID_HERE"]
            }
          }
        },
        {
          "name": "Get Booking for Review",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/BOOKING_ID_HERE/review-form",
              "host": ["{{base_url}}"],
              "path": ["bookings", "BOOKING_ID_HERE", "review-form"]
            }
          }
        },
        {
          "name": "Download E-Ticket",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bookings/BOOKING_ID_HERE/download-ticket",
              "host": ["{{base_url}}"],
              "path": ["bookings", "BOOKING_ID_HERE", "download-ticket"]
            }
          }
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cancel_reason\": \"Berhalangan hadir\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings/BOOKING_ID_HERE/cancel",
              "host": ["{{base_url}}"],
              "path": ["bookings", "BOOKING_ID_HERE", "cancel"]
            }
          }
        }
      ]
    }
  ],
  "variables": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}
